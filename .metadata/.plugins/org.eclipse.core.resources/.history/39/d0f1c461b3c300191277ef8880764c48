alt_u32 tlc_timer_isr(void* context) {
	OpperationMode *currentMode = (unsigned int*) context;
	UpdateMode(currentMode);
	switch ((*currnetMode)) {
	case Mode1:
		break;
	case Mode2:
		break;
	case Mode3:
		break;
	case Mode4:
		break;
	}

	return LIGHT_TRANSITION_TIME;
}

